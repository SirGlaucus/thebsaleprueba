<div class="col-lg-4 col-md-12 mt-2">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{item.url_image}}" alt="Card image cap">
        <div class="card-body">
            <p class="card-text">{{item.name}}</p>
        </div>
        <div class="card-footer bg-transparent">
            <span class="card-text text-start">{{item.price}}</span>
            <button type="button" class="btn btn-primary ml-1">Agregar</button>
        </div>
    </div>
</div>